@using Delta.Models.PartialModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}


@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/our-production.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/css/our-production-bundle.css" asp-append-version="true">
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/home.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/home-bundle.js" asp-append-version="true"></script>
    </environment>
}

@{
    await Html.RenderPartialAsync("NotMainSectionPartial", new NotMainSectionModal
    {
        Title = "ИФА"
    });
}

<section id="at-the-right-edge" class="at-the-right-edge">
    <div class="items">
        <div class="header-title">
            <h3>
                Шейкер для планшетов ИФА Micro Shake 1200 (Global Diagnostics)
            </h3>
        </div>
        <div class="wrapper-d">
            <div class="item-images">
                <img class="box1 img-min1" src="/images/imgIfa/MicroShake12001.jpg" alt="">
                <img class="box1 img-big" src="/images/imgIfa/MicroShake120011.jpg" alt="">
                <img class="box2 img-min" src="/images/imgIfa/MicroShake12002.jpg" alt="">
                <img class="box3 img-min img-c" src="/images/imgIfa/MicroShake12003.jpg" alt="">
                <img class="box4 img-min" src="/images/imgIfa/MicroShake12004.jpg" alt="">
            </div>
            <div class="item-title">
                <h3>Описание</h3>
                <ul class="big-list">
                    <li>Одновременное орбитальное встряхивание и инкубация</li>
                    <li>Сигнальная индикация об завершении инкубации</li>
                    <li>Индикация оставшегося времени</li>
                    <li>Отображение температуры на дисплее при нажатии клавиши TEMP</li>
                </ul>
            </div>
            <div class="item-table">
                <div class="column column-1">
                    <div class="hed-card">
                        <p>Технческие характеристики</p>
                    </div>
                    <ul class="emptyTable big-list">
                        <li>Режимы работы: Шейкер; инкубатор; Шейкер/инкубатор;</li>
                        <li>Температурный диапазон: 37-42 ℃;</li>
                        <li>Точность инкубатора: 1 ℃;</li>
                        <li>Диапазон таймера: 1 - 999 мин;</li>
                        <li>Скорость шейкера: 400 - 700 RPM;</li>
                        <li>Амплитуда встряхивания: 2 мм;</li>
                        <li>Рабочая температура: +18 - 32 ℃;</li>
                        <li>Относительная влажность: До 80%;</li>
                        <li>Корпус: ABS пластик, окрашенный огнеупорной эмалью;</li>
                        <li>Габариты: 28 х 25 х 16 см;</li>
                        <li>Вес: 3 кг.</li>
                    </ul>
                </div>
                <div class="column column-2">
                    <div class="hed-card">
                        <p>Реагенты</p>
                    </div>
                    <div class="emptyTable">
                    </div>
                </div>
                <div class="column column-3">
                    <div class="hed-card">
                        <p>Сертификаты</p>
                    </div>
                    <div class="emptyTable">
                        
                    </div>
                </div>
                <div class="column column-4">
                    <div class="hed-card">
                        <p></p>
                    </div>
                    <div class="emptyTable">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
	<div class="bg"></div>
</section>