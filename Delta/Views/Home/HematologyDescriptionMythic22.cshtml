
@using Delta.Models.PartialModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}


@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/our-production.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/css/our-production-bundle.css" asp-append-version="true">
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/home.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/home-bundle.js" asp-append-version="true"></script>
    </environment>
    <environment include="Development">
        <script src="~/js/hematology.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/hematology-bundle.js" asp-append-version="true"></script>
    </environment>
}

@{
    await Html.RenderPartialAsync("NotMainSectionPartial", new NotMainSectionModal
    {
        Title = "Гематология"
    });
}

<section id="at-the-right-edge" class="at-the-right-edge">
    <div class="items">
        <div class="header-title">
            <h3>
                Автоматический гематологический анализатор Mythic 22 (Cormay)
            </h3>
        </div>
        <div class="wrapper-d">
            <div class="item-images">
                <img class="box1 img-min1" src="/images/imgHematology/Mythic22-1.png" alt="">
                <img class="box1 img-big" src="/images/imgHematology/Mythic22-11.png" alt="">
                <img class="box2 img-min" src="/images/imgHematology/Mythic22-2.png" alt="">
                <img class="box3 img-min img-c" src="/images/imgHematology/Mythic22-3.png" alt="">
                <img class="box4 img-min" src="/images/imgHematology/Mythic22-4.png" alt="">
            </div>
            <div class="item-title">
                <h3>Описаниe</h3>
                <ul class="big-list">
                    <li>Дифференциация лейкоцитов по 5 субпопуляциям (5-diff), 24 определяемых параметрa, 2 гистограммы и 1 скатерограмма</li>
                    <li>Минимальное потребление реагентов</li>
                    <li>Низкий объём забора пробы</li>
                    <li>Сверхкомпактный дизайн</li>
                    <li>Один из самых надёжных анализаторов в своём классе</li>
                    <li>Большой цветной сенсорный дисплей</li>
                    <li>Русифицированный интерфейс</li>
