@using Delta.Models.PartialModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}


@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/our-production.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/css/our-production-bundle.css" asp-append-version="true">
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/hematology.js" asp-append-version="true"></script>
        <script src="~/js/home.js" asp-append-version="true"></script>
        <script src="~/js/open-list.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/hematology-bundle.js" asp-append-version="true"></script>
        <script src="~/js/home-bundle.js" asp-append-version="true"></script>
        <script src="~/js/open-list-bundle.js" asp-append-version="true"></script>
    </environment>
}

@{
    await Html.RenderPartialAsync("NotMainSectionPartial", new NotMainSectionModal
    {
        Title = "Гемостаз"
    });
}

<section id="at-the-right-edge" class="at-the-right-edge">
    <div class="items">
        <div class="header-title">
            <h3>
                Aвтоматический анализатор коагуляции Solea 100 (BioLabo)
            </h3>
        </div>
        <div class="wrapper-d">
            <div class="item-images">
                <img class="box1 img-min1" src="/images/Hemostasis/Solea100_1.png" alt="">
                <img class="box1 img-big" src="/images/Hemostasis/Solea100_11.png" alt="">
                <img class="box2 img-min" src="/images/Hemostasis/Solea100_2.png" alt="">
                <img class="box3 img-min img-c" src="/images/Hemostasis/Solea100_3.png" alt="">
                <img class="box4 img-min" src="/images/Hemostasis/Solea100_4.png" alt="">
            </div>
            <div class="item-title">
                <h3>Описаниe</h3>
                <ul class="big-list">
                    <li>Полностью автоматизированный, высокопроизводительный, компактный анализатор</li>
                    <li>Эффективно обрабатывает стандартные и специальные тесты на свертываемость крови</li>
                    <li>Оснащенный технологией механического (на основе вязкости) обнаружения для тестирования элементов свертывания, а также оптическим каналом для хромогенных и иммунотурбидиметрических тестов</li>
                    <li>Он является идеальным выбором для средних и крупных лабораторий</li>
                    <li>Непрерывная загрузка реагентов и образцов во время работы</li>
                    <li>Автоматическое предварительное разбавление</li>
                    <li>Автоматическое повторное тестирование</li>
                    <li>Автоматическое определение уровня жидкости</li>
                    <li>Aвтоматический расчет калибровочной кривой</li>
                    <li>Графическое отображение процесса свертывания</li>
                    <li>Световой и звуковой сигнал</li>
                </ul>
            </div>
            <div class="item-table">
                <div class="column column-1">
                    <div class="hed-card">
                        <p>Технческие характеристики</p> 
                    </div>
                    <ul class="emptyTable big-list">
                        <li>Вид аналитической системы: автоматический</li>
                        <li>Принцип: механический метод; отический метод (хромогенный и иммунотурбидиметрический)</li>
                        <li>Определяемые параметры: клоттинговые тесты - протромбиновое время, МНО, АЧТВ, фибриноген, тромбиновое время, LA, факторы свертывания (II, V, VII, X, VIII, IX, XI, XII), гепарин и LMWH, протеины С и S; хромогенные тесты: Антитромбин III, Плазминоген, Протеин C; иммунологические тесты: Д-Димер</li>
                        <li>Производительность: до 110 тестов в час с произвольным доступом и непрерывной загрузкой</li>
                        <li>Методы измерения: коагулологические и имунотурбидиметрические исследования, хромогенный анализ</li>
                        <li>Длины волны: красный - 620 нм, синий – 405 нм</li>
                        <li>Реакционная система: 16 позиций, охлаждение реагентов (17 °C), магнитное перемешивание реагентов, определение уровня</li>
                        <li>Непрерывная работа и управление STAT образцами</li>
                        <li>Измерительные каналы: 8</li>
                        <li>Штрих-код: встроенный сканер штрих-кода</li>
                        <li>Позиции образцов: 32</li>
                        <li>Позиции контроля и калибровки: 8</li>
                        <li>Штрих-код(опция): внутренний сканер штрих-кода</li>
                        <li>STAT: независимая автоматическая загрузка STAT образцов</li>
                        <li>Позиции реагентов: 16 позиций с охлаждением (17 °C) и магнитным перемешиванием; определение уровня жидкости</li>
                        <li>Автоматическая загрузка кювет: 464 кювет</li>
                        <li>Калибровка: aвтоматическая калибровка</li>
                        <li>Интерфейс подключения: USB-2.0</li>
                        <li>Лабораторная информационная система (ЛИС): двусторонняя связь с ЛИС</li>
                        <li>Источник питания: 200–240 В, 50 Гц, 1500 ВА или 220–230 В, 60 Гц, 1500 ВА или 110–115 В, 60 Гц, 1500 ВА</li>
                        <li>Температура: 15–30 °C</li>
                        <li>Влажность: 35–85%</li>
                        <li>Размеры: 72 х 62 х 55 см</li>
                        <li>Вес: 37 кг</li>
                    </ul>
                </div>
                <div class="column column-2">
                    <div class="hed-card">
                        <p>Реагенты</p>
                    </div>
                    <div class="emptyTable">
                        <div class="img">
                            <img src="/images/Hemostasis/HemostasisReg2.jpg" alt="">
                        </div> 
                        <div class="list">
                            <div class="hed img-13">
                                <p>Клоттинговые тесты</p>
                            </div>
                            <ul class="none-ul">
                                <li>PT - протромбиновое время</li>
                                <li>APTT - активированное частичное тромбопластиновое время</li>
                                <li>CaCl2 – хлорид кальция</li>
                                <li>FBG - фибриноген</li>
                                <li>TT – тромбиновое время</li>
                            </ul>
                        </div>
                        <div class="list">
                            <div class="hed img-13">
                                <p>Хромогенные тесты</p>
                            </div>
                            <ul class="none-ul">
                                <li>AT III – антитромбин III</li>
                                <li>Protein C – протеин C</li>
                                <li>Protein S – протеин S</li>
                                <li>LA Screen - волчаночный антикоагулянт (скрининговый тест)</li>
                                <li>LA Confirm - волчаночный антикоагулянт (подтверждающий тест)</li>
                            </ul>
                        </div>
                        <div class="list">
                            <div class="hed img-13">
                                <p>Иммунологические тесты</p>
                            </div>
                            <ul class="none-ul">
                                <li>DD – Д-димер</li>
                            </ul>
                        </div>
                        <div class="list">
                            <div class="hed img-13">
                                <p>Факторы <br> (внешний путь)</p>
                            </div>
                            <ul class="none-ul">
                                <li>F II – фактор II</li>
                                <li>F V - фактор V</li>
                                <li>F VII - фактор VII</li>
                                <li>F X - фактор X</li>
                            </ul>
                        </div>
                        <div class="list">
                            <div class="hed img-13">
                                <p>Факторы <br> (внутренний путь)</p>
                            </div>
                            <ul class="none-ul">
                                <li>F VIII – фактор VIII</li>
                                <li>F IX – фактор IX</li>
                                <li>F XI – фактор XI</li>
                                <li>F XII – фактор XII</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="column column-3">
                    <div class="hed-card">
                        <p>Расходные материалы</p>
                    </div>
                    <div class="emptyTable">
                    </div>
                </div>
                <div class="column column-4">
                    <div class="hed-card">
                        <p>Сертификаты</p>
                    </div>
                    <div class="emptyTable">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
	<div class="bg"></div>
</section>