@using Delta.Models.PartialModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}


@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/our-production.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/css/our-production-bundle.css" asp-append-version="true">
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/hematology.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/hematology-bundle.js" asp-append-version="true"></script>
    </environment>
}

@{
    await Html.RenderPartialAsync("NotMainSectionPartial", new NotMainSectionModal
    {
        Title = "Гематология"
    });
}

<section id="at-the-right-edge" class="at-the-right-edge">
    <div class="items">
        <div class="header-title">
            <h3>
                Автоматический гематологический анализатор Mythic70
            </h3>
        </div>
        <div class="wrapper-d">
            <div class="item-images">
                <img class="box1 img-min1" src="/images/imgHematology/description-of-hematology-1.png" alt="">
                <img class="box1 img-big" src="/images/imgHematology/description-of-hematology-11.png" alt="">
                <img class="box2 img-min" src="/images/imgHematology/description-of-hematology-2.png" alt="">
                <img class="box3 img-min img-c" src="/images/imgHematology/description-of-hematology-3.png" alt="">
                <img class="box4 img-min" src="/images/imgHematology/description-of-hematology-4.png" alt="">
            </div>
            <div class="item-title">
                <h3>Описание</h3>
                <ul>
                    <li>Спектр определяемых параметров – 109 показателей, важных для работы клинициста.</li>
                    <li>Достоинства возможностей анализатора доказаны результатами клинических испытаний.</li>
                    <li>Высокая точность измерений, подсчет полной формулы лейкоцитов, типирование патологических и незрелых форм всех видов клеток крови – точный и достоверный результат установления диагноза.</li>
                    <li>Анализатор позволяет работать со следующими видами биологических жидкостей: спинномозговая, плевральная, асцитическая и синовиальная.</li>
                    <li>Настройка алгоритма повторного анализа позволяет пользователям задавать собственные критерии повторного анализа согласно порядку, принятому в лаборатории.</li>
                    <li>Возможность выбирать наиболее рациональный режим исследования для каждого вида диагностики, что позволяет экономить реагент и время, затрачиваемое на 1 анализ.</li>
                </ul>
            </div>
            <div class="item-table">
                <div class="column column-1">
                    <div class="hed-card">
                        <p>Технческие характеристики</p>
                    </div>
                    <ul class="emptyTable big-list">
                        <li>Русифицированное меню</li>
                        <li>TFT сенсорный дисплей с простым, интуитивно понятным, интерактивным управлением.</li>
                        <li>4 USB порта, для возможности подключения дополнительных внешних приборов (Wi-Fi-адаптер, внешний принтер, клавиатура, мышка, внешний сканер штрихкодов и т.п.).</li>
                        <li>Встроенный термальный принтер.</li>
                        <li>Встроенный сканер штрихкодов.</li>
                        <li>Автоматическая калибровка.</li>
                        <li>Флагирование патологических результатов</li>
                        <li>Сохранение до 130 000 результатов исследований, включая всю числовую информацию, гистограммы и диаграммы рассеяния.</li>
                    </ul>
                </div>
                <div class="column column-2">
                    <div class="hed-card">
                        <p>Реагенты</p>
                    </div>
                    <div class="emptyTable">
                        <div class="img">
                            <img src="/images/imgHematology/reagentsMythic70.jpg" alt="">       
                        </div> 
                    </div>
                </div>
                <div class="column column-3">
                    <div class="hed-card">
                        <p>Сертификаты</p>
                    </div>
                    <div class="emptyTable">
                    </div>
                </div>
                <div class="column column-4">
                    <div class="hed-card">
                        <p></p>
                    </div>
                    <div class="emptyTable">
                                    
                    </div>
                </div>
            </div>
        </div>
    </div>
