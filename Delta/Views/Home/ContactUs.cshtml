@using Delta.Models.PartialModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ContactModel>

@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/contact-us.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/css/contact-us-bundle.css" asp-append-version="true">
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/home.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/home-bundle.js" asp-append-version="true"></script>
    </environment>
}

@{
    await Html.RenderPartialAsync("NotMainSectionPartial", new NotMainSectionModal
    {
        Title = "Контакты"
    });
}





<section id="ContactUs" class="contact-us">
    <div class="header-product-category">
        <ul class="min-nav-menu">
            <li>
                <a href="/home/ContactUs">Главная/</a>
            </li>
            <li>
                <a href="/home/ContactUs">Контакты</a>
            </li>
        </ul>
    </div>
    <div class="wrapper">
        
        @{
            var contact = Model.FirstOrDefault(); // Получаем первую запись
        }
        
        @if (contact != null)
        {
            <div class="img">
                <img src="/images/companies/@contact.ImgBg" alt="">
            </div>
            <div id="@contact.Id" class="address-office-hours">
                <div class="contacts-page">
                    <p>@contact.HeaderNumber</p>
                    <div class="map-page">
                        <img src="/images/icon/map_icon-black.svg" alt="">
                        <p>
                            @contact.Address
                        </p>
                    </div>
                    <a href="#" class="number">
                        <img src="/images/icon/phone-black.svg" alt="">
                        <p>@contact.NumberOne</p>
                    </a>
                    <a href="#" class="number">
                        <img src="/images/icon/phone-black.svg" alt="">
                        <p>@contact.NumberTwo</p>
                    </a>
                </div>
                <div class="office-hours">
                    <p>
                        @contact.HeaderTimetable
                    </p>
                    <div class="days">
                        <div>
                            <p>Monday</p><span>@contact.Monday</span>
                        </div>
                        <div>
                            <p>Friday</p><span>@contact.Friday</span>
                        </div>
                        <div>
                            <p>Saturday</p><span>@contact.Saturday</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

