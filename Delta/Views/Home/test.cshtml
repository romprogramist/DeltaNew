@{
    ViewData["Title"] = "Home Page";
}



@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/add-company.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/css/add-company.css" asp-append-version="true">
    </environment>
}
@section Scripts {
    <script src="~/js/swiper-bundle.min.js"></script>
    <environment include="Development">
        <script src="~/js/home.js" asp-append-version="true"></script>
        <script src="~/js/add-hover-class.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/home-bundle.js" asp-append-version="true"></script>
        <script src="~/js/add-hover-class-bundle.js" asp-append-version="true"></script>
    </environment>
}

<section class="list-companies">
    <a style="margin-bottom: 20px; display: block; font-size: 18px" href="/home/AdminPanel">Вернуться на главное меню</a>
    <table>
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Logo</th>
            </tr>
            </thead>
            <tbody class="list"></tbody>
        </table>
    </table>
    <a class="link-transition" href="/home/AddACompany">
        Добавить компанию
    </a>
</section>