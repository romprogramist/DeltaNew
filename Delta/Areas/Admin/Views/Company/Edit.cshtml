@model CompanyModel


@{
    ViewBag.Title = "Company edit";
}

@section Scripts {    
    <environment include="Development">
        <script src="~/js/admin/company.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/admin/company-bundle.js" asp-append-version="true"></script>
    </environment>
}




<form class="company-edit">
    <input type="hidden" name="id" value="@Model.Id"/>
    <label>
        Name
        <input value="@Model.Name" type="text" name="name"/>
    </label>
    <label>
        Description
        <input value="@Model.Description" type="text" name="description"/>
    </label>
    <img src="/images/companies/@Model.Logo" alt="@Model.Name"/>
    <input class="form-file" type="file" name="logo" accept="image/*"/>
    <button type="submit">Edit product</button>
</form>