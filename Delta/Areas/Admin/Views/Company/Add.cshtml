@section Scripts {    
    <environment include="Development">
    	<script src="~/js/admin/company.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
    	<script src="~/js/admin/company-bundle.js" asp-append-version="true"></script>
    </environment>
}



<form class="company-add">
    <div class="button-and-header">
        <h2>
            Добавить компанию
        </h2>
        <button type="submit">
            Добавить
        </button>
    </div>
    <p class="successfully"></p>
    <label>
        <input id="name" type="text" name="name" placeholder="Название"/>
    </label>
    <label>
        <input id="description" type="text" name="description" placeholder="Описание"/>
    </label>
    <div class="lower-input">
        <label>
            <input class="form-file" type="file" name="logo" accept="image/*"/>
        </label>
    </div>
    <div class="validation"></div>
    <a class="link-transition" href="/Admin/Company/Edit">Таблица со списком компании</a>
</form>


